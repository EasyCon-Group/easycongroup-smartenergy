<resources>

    <style name="AppTheme.TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxBackgroundColor">@color/color_input_background_primary</item>

        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>

        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>

        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeErrorColor">@color/color_error</item>

    </style>

    <style name="AppTheme.TextInputLayoutOutlined.Default">
        <item name="boxStrokeColor">@color/color_input_stroke_primary</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textColor">@color/app_text_color_primary</item>
    </style>

    <style name="AppTheme.TextInputEditText.Default">
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/color_input_background_light</item>
        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
    </style>

</resources>
