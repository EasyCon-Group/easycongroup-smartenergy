<resources>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/font_family_open_sans</item>
        <item name="android:textColor">@color/app_text_color_primary</item>
        <item name="background">@color/color_toolbar_background</item>
    </style>

    <style name="AppTheme.Toolbar.Default" >
        <item name="android:textAppearance">@style/Text.OpenSans.SemiBold.17.PrimaryColor</item>
        <item name="android:titleTextAppearance">@style/Text.OpenSans.SemiBold.17.PrimaryColor</item>
        <item name="titleTextAppearance">@style/Text.OpenSans.SemiBold.17.PrimaryColor</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
    </style>

</resources>
