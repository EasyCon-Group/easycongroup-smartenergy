<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomIconIndicator">
        <attr name="cii_dot_selected_width" format="dimension" />
        <attr name="cii_dot_selected_height" format="dimension" />

        <attr name="cii_dot_not_selected_width" format="dimension" />
        <attr name="cii_dot_not_selected_height" format="dimension" />

        <attr name="cii_dots_between_margin" format="dimension" />

        <attr name="cii_dot_selected_icon" format="reference" />
        <attr name="cii_dot_not_selected_icon" format="reference" />

        <attr name="cii_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="cii_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

    </declare-styleable>

    <declare-styleable name="InputFieldView">
        <attr name="endIconDrawable" />
        <attr name="endIconMode" />
        <attr name="android:imeOptions" />
        <attr name="android:inputType" />
        <attr name="labelText" format="string|reference" />
        <attr name="postfixText" format="string|reference" />
        <attr name="postfixTextColor" format="reference|color" />
        <attr name="boxBackgroundColor" />
        <attr name="postfixPadding" format="reference|dimension" />
        <attr name="android:hint" />
        <attr name="android:gravity" />
        <attr name="helperText" />
        <attr name="android:minLines" />
        <attr name="android:maxLines" />
    </declare-styleable>

</resources>
